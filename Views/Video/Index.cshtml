@model IEnumerable<HW3_U21470121.Models.FileModel>
@{
    ViewBag.Title = "Index";
}
@*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">*@
<script src="jquery.fancybox.min.js"></script>
<style>

    .video {
        align-content: center;
        height: 15vw;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        background-size: auto;
        object-fit: contain;
    }

    div.container {
        padding: 10px 20px;
    }

    .card {
        padding: 10px;
        border: solid 1px;
        background-color: white;
       
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .container-fluid {
        background-color: lightgray;
        height: 550px;                              /* scroll bar appearing when needed*/
        overflow-y: auto;
        overflow-x: hidden;
    }

</style>
<h2>Videos</h2>
<br/>
<h3> "/Media/Videos" Folder</h3>
<div class="container-fluid">

    @{var FancyBox = 0; }

    @foreach (var item in Model)
    {
        FancyBox += 1;
        var VideoPath = "~/Media/Videos/" + item.FileName;

        <div class="col-lg-4">
            <div class="container">
                <div class="card" style="width:260px">
                    <video width="240">
                        <source src="@Url.Content(VideoPath)" type="video/mp4">
                       </video>
                        <div class="card-body">
                            <h6 class="card-title"> @Html.DisplayFor(modelItem => item.FileName)</h6>
                            <button type="button" class="btn btn-success"> @Html.ActionLink("Download", "DownloadFile", new { filename = item.FileName }, new { style = "color: white;" })</button>  @*//chaanged color to white so it displays*@
                            <button type="button" class="btn btn-danger"> @Html.ActionLink("Delete", "DeleteFile", new { filename = item.FileName }, new { style = "color: white;" })</button>
                        </div>
                </div>
            </div>
        </div>

                        }

</div>
<script>
    $(document).ready(function ($) {
        $(".gallery").fancybox();
    });
</script>


